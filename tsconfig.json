{
  "compilerOptions": {
    "target": "es6",                         
    "module": "commonjs", 
    "declaration": true,                   
    "sourceMap": true,                        
    "outDir": "build",                        
    "noImplicitAny": true,                   
    "baseUrl": "./",                    
    "esModuleInterop": true,                 
    "experimentalDecorators": true,       
    "emitDecoratorMetadata": false,    
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./build"
  ]
}
